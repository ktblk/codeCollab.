<!-- <h1>Login</h1> -->

<%= form_tag '/login' do %>

<div class="space">
  <br>
</div>

<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">
      <div class="input-field">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: "validate" %>
      </div>

      <div class="input-field">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "validate" %>
      </div>
    </div>
  </div>
</div>
<div class="actions" style="margin-top: 40px;">
<a class="waves-effect waves-teal btn"><%= submit_tag "Login" %></a>
</div>
<% end %>
