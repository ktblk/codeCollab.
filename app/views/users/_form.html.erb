<%= form_for(user) do |f| %>
<% if user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="space">
  <br>
</div>


<div class="container">
  <div class="row">
    <div class="col s6 offset-s3">

      <div class="input-field">
        <%= f.label :username %>
        <%= f.text_field :username, class: "validate" %>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "validate" %>
        </div>

        <div class="input-field col s6">
          <%= f.label :password %>
          <%= f.password_field :password, class: "validate" %>
        </div>
        <div class="input-field col s6">
          <%= f.label "Confirm password" %>
          <%= f.password_field :password_confirmation, class: "validate" %>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="actions" style="margin-top: -10px;">
  <a class="waves-effect waves-teal cyan lighten-2 btn"><%= f.submit 'Register' %></a>
</div>
<% end %>
